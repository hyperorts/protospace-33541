<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), "/prototypes/#{prototype.id}" %>
  <div class="card__body">
    <%= link_to prototype.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "おれの名を言ってみろ！ #{prototype.user.name}だー！！", root_path, class: :card__user %>
  </div>
</div>